[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .venv,
    venv,
    cdk.out
ignore = 
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    E203   # whitespace before ':'
per-file-ignores =
    __init__.py:F401